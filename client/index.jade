doctype html
html

  head

    //- Site Information
    block meta

      title Emissary â€¢ Tournament Codes

      link(rel="stylesheet" href="/index.css")

  body

    //- Floating "Fork me on GitHub" Ribbon
    a(href="https://github.com/Polytonic/Emissary")
      img.gh-ribbon(alt="Fork me on GitHub"
        style="position: absolute; top: 0; right: 0; border: 0;"
        src="https://github-camo.global.ssl.fastly.net/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67"
        data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png")

    button(onclick="update()") refresh

    select#maps

      option Summoner's Rift
      option Howling Abyss
      option Crystal Scar
      option Twisted Treeline

    select#modes

      option Blind Pick
      option All Random
      option Draft Mode
      option Tournament Draft


      //- Legacy Game Modes
      option(disabled)
      option(disabled) Blind Draft
      option(disabled) One for All

    select#players
      each val in [1, 2, 3, 4, 5]
        option(value=val)=val

    select#specs

      option All
      option Friends
      option Lobby
      option None

    br
    h4 Lobby Name:
    input#lobbyName
    h4 Lobby Password:
    input#lobbyPass
    h4 Tournament Code:
    input#single

    br
    label Random Password
      input(type="checkbox")#rpass
    br
    label Random Hash
      input(type="checkbox")#rhash

    br
    label Use Index
      input(type="checkbox")#index
    br
    h4 Number of Extra Codes to Generate:
    input(type="number")#number
    br
    textarea#multi

    //- Javascript
    block javascript

      //- Required Libraries
      script(src="/static/jquery/jquery.min.js")
      script(src="/static/uri.js/src/URI.js")

      //- Local Dependencies
      script(src="/index.js")
